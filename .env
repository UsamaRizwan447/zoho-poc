# ZOHO OAuth Credentials
CLIENT_ID=your_client_id_here
CLIENT_SECRET=your_client_secret_here
REDIRECT_URI=https://your-app.onrender.com/oauth/callback  # Update after deployment

# ZOHO OAuth Endpoints
ZOHO_AUTH_URL=https://accounts.zoho.com/oauth/v2/auth
ZOHO_TOKEN_URL=https://accounts.zoho.com/oauth/v2/token
ZOHO_API_URL=https://desk.zoho.com/api/v1

# Flask Secret Key (for session management)
SECRET_KEY=your_random_secret_key_here

# Database URL (If using PostgreSQL on Render)
DATABASE_URL=postgresql://yourusername:yourpassword@yourhost:5432/yourdbname
